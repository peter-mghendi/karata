@using Karata.Web.Extensions
<img class="card cursor-pointer" src="@Assets[Card.ImageSource(faceUp: FaceUp)]" @onclick="Click" alt="@Card.Name"/>

@code {
    [Parameter]
    public Card Card { get; set; } = null!;

    [Parameter]
    public bool FaceUp { get; set; }

    [Parameter]
    public EventCallback<Card> OnClick { get; set; }

    private async Task Click() => await OnClick.InvokeAsync(Card);
}