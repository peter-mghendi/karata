<MudList ReadOnly SelectedValue="@Game.CurrentHand.User">
    @if (Subheader)
    {
        <MudListSubheader>Players</MudListSubheader>    
    }
    
    @foreach (var hand in Game.Hands)
    {
        <HandDisplay Hand="hand" IsAdministrator="@(hand.User == Room.Administrator)" IsMe="@(hand.User == Me)"/>
    }
</MudList>

@code
{
    [Parameter]
    public bool Subheader { get; set; }

    [Parameter] public RoomData Room { get; set; } = null!;
    
    [Parameter] public UserData? Me { get; set; }

    private GameData Game => Room.Game;
}