<MudList>
    @foreach (var hand in Game.Hands)
    {
        <MudListItem>
            @hand.User.Email
            @if (hand.User == Room.Creator)
            {
                <MudChip Icon="@Icons.Material.Rounded.Security" Variant="Variant.Text" Color="Color.Primary">Creator</MudChip>
            }
            
            @if (hand.User == Me)
            {
                <MudChip Icon="@Icons.Material.Rounded.AccountCircle" Variant="Variant.Text" Color="Color.Info">You</MudChip>
            }
        </MudListItem>
    }
</MudList>

@code
{
    [Parameter]
    public UserData Me { get; set; } = null!;
    
    [Parameter]
    public RoomData Room { get; set; } = null!;

    private GameData Game => Room.Game;
}