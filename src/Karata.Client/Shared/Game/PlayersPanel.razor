<MudList SelectedValue="@Game.CurrentHand.User">
    @foreach (var hand in Game.Hands)
    {
        <MudListItem Value="@hand.User">
            @hand.User.Email
            @if (hand.User == Room.Creator)
            {
                <MudChip Icon="@Icons.Material.Rounded.Security" Variant="Variant.Text" Color="Color.Primary" Size="Size.Small">
                    Creator
                </MudChip>
            }
            @if (hand.User == Me)
            {
                <MudChip Icon="@Icons.Material.Rounded.AccountCircle" Variant="Variant.Text" Color="Color.Info" Size="Size.Small">
                    You
                </MudChip>
            }
        </MudListItem>
    }
</MudList>

@code
{
    [Parameter]
    public UserData Me { get; set; } = null!;
    
    [Parameter]
    public RoomData Room { get; set; } = null!;

    private GameData Game => Room.Game;
}